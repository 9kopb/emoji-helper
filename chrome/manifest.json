{
  "manifest_version": 2,

  "name": "Emoji Cheatsheet for GitHub, Basecamp etc.",
  "short_name": "Emoji Helper",
  "description": "Emoji!",
  "version": "0.4.0",
  "icons": { "128": "icon.png" },

  "author" : "Johann Hofmann",

  "offline_enabled": true,

  "permissions":[
    "clipboardWrite",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
